{
  "name": "dev-soob-log",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": ">=10 <11"
  },
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run generate-rss",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "commit": "cz",
    "post:new": "node scripts/newPost.js",
    "generate-rss": "ts-node scripts/generate-rss.ts",
    "generate-og": "node scripts/generate-og-image-simple.js",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "npx lighthouse https://dev-soob-log.vercel.app --output=json --output-path=./lighthouse-report.json",
    "test:mobile": "node scripts/mobile-responsive-test.js",
    "test:mobile:dev": "npm run dev & sleep 10 && npm run test:mobile && pkill -f 'next dev'",
    "test:responsive-issues": "node scripts/check-responsive-issues.js",
    "test:responsive-issues:dev": "npm run dev & sleep 10 && npm run test:responsive-issues && pkill -f 'next dev'",
    "test:mobile:all": "node scripts/run-mobile-tests.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.1.8",
    "@notionhq/client": "^3.1.2",
    "@types/prismjs": "^1.26.5",
    "critters": "^0.0.23",
    "feed": "^5.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.525.0",
    "next": "^15.3.2",
    "next-mdx-remote": "^5.0.0",
    "next-seo": "^6.8.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^1.3.5",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype": "^13.0.2",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.5",
    "autoprefixer": "^10.4.14",
    "canvas": "^3.1.2",
    "commitizen": "^4.3.1",
    "postcss": "^8.4.31",
    "puppeteer": "^24.16.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
